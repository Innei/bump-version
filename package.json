{
  "name": "@innei/bump-version",
  "type": "module",
  "bin": {
    "bump": "dist/index.mjs",
    "vv": "dist/index.mjs"
  },
  "version": "1.0.0-alpha.3",
  "files": [
    "dist",
    "package.json",
    "LICENSE"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --ignore-path ./.gitignore --write "
    ]
  },
  "scripts": {
    "dev": "NODE_ENV=development tsx src/main.mts -- --dry-run",
    "dev:monorepo": "NODE_ENV=development tsx src/main.mts -- --dry-run -f test/packages/core",
    "prebuild": "rm -rf dist",
    "build": "tsc && ncc build lib/src/main.mjs -o dist --external conventional-changelog",
    "test": "vitest"
  },
  "devDependencies": {
    "@innei/eslint-config-ts": "0.9.4",
    "@types/conventional-changelog": "3.1.1",
    "@types/inquirer": "9.0.1",
    "@types/semver": "7.3.12",
    "@vercel/ncc": "0.34.0",
    "husky": "8.0.1",
    "inquirer": "^9.1.2",
    "lint-staged": "13.0.3",
    "semver": "^7.3.7",
    "typescript": "4.8.3",
    "vite": "3.1.3",
    "vitest": "0.23.4",
    "zx": "^7.0.8"
  },
  "dependencies": {
    "conventional-changelog": "3.1.25"
  },
  "resolutions": {
    "chalk": "^4.0"
  }
}