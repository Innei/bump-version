{
  "name": "@innei/bump-version",
  "type": "module",
  "packageManager": "pnpm@7.19.0",
  "homepage": "https://github.com/Innei/bump-version",
  "bin": {
    "bump": "dist/index.mjs",
    "vv": "dist/index.mjs"
  },
  "version": "1.5.4",
  "files": [
    "dist",
    "package.json",
    "LICENSE"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --ignore-path ./.gitignore --write "
    ]
  },
  "scripts": {
    "dev": "NODE_ENV=development tsx src/main.mts -- --dry-run",
    "dev:filter": "NODE_ENV=development tsx src/main.mts -- --dry-run -f test/packages/core",
    "dev:monorepo": "NODE_ENV=development tsx src/main.mts -- --dry-run -c .monorepo.bumprc",
    "prebuild": "rm -rf dist",
    "build": "tsc && ncc build lib/src/main.mjs -o dist --external conventional-changelog",
    "test": "vitest"
  },
  "devDependencies": {
    "@innei/eslint-config-ts": "0.9.6",
    "@innei/prettier": "0.9.6",
    "@types/conventional-changelog": "3.1.1",
    "@types/inquirer": "9.0.3",
    "@types/semver": "7.3.13",
    "@vercel/ncc": "0.36.0",
    "husky": "8.0.2",
    "inquirer": "^9.1.4",
    "lint-staged": "13.1.0",
    "semver": "^7.3.8",
    "typescript": "4.9.4",
    "vite": "4.0.3",
    "vitest": "0.26.2",
    "zx": "^7.1.1"
  },
  "dependencies": {
    "conventional-changelog": "3.1.25",
    "slugify": "^1.6.5"
  }
}
