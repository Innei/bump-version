{
  "name": "@innei/bump-version",
  "type": "module",
  "bin": {
    "bump": "dist/index.js",
    "bp": "dist/index.js",
    "bv": "dist/index.js",
    "vv": "dist/index.js"
  },
  "version": "0.1.5",
  "files": [
    "dist/index.js",
    "package.json"
  ],
  "scripts": {
    "watch": "ncc build --watch src/index.js -o dist",
    "build": "ncc build --minify src/index.js -o dist"
  },
  "bump": {
    "before": [
      "git pull --rebase",
      "pnpm i",
      "npm run build"
    ],
    "after": [
      "sh ./scripts/create-tags.sh",
      "npm publish --access=public"
    ]
  },
  "devDependencies": {
    "@vercel/ncc": "^0.33.1",
    "inquirer": "^8.2.0",
    "semver": "^7.3.5",
    "zx": "^4.2.0"
  }
}