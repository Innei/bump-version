{
  "name": "@innei/bump-version",
  "type": "module",
  "bin": {
    "bump": "dist/index.mjs",
    "vv": "dist/index.mjs"
  },
  "version": "1.0.0-alpha.1",
  "files": [
    "dist",
    "package.json",
    "LICENSE"
  ],
  "scripts": {
    "dev": "NODE_ENV=development tsx src/main.mts",
    "prebuild": "rm -rf dist",
    "build": "tsc && ncc build lib/main.mjs -o dist --external conventional-changelog"
  },
  "bump": {
    "leading": [
      "git pull --rebase",
      "pnpm i",
      "npm run build"
    ],
    "trailing": [],
    "publish": true,
    "changelog": true
  },
  "devDependencies": {
    "@innei/eslint-config-ts": "0.9.4",
    "@types/conventional-changelog": "3.1.1",
    "@types/inquirer": "9.0.1",
    "@types/semver": "7.3.12",
    "@vercel/ncc": "0.34.0",
    "inquirer": "^9.1.2",
    "semver": "^7.3.7",
    "typescript": "4.8.3",
    "zx": "^7.0.8"
  },
  "dependencies": {
    "conventional-changelog": "3.1.25"
  },
  "resolutions": {
    "chalk": "^4.0"
  }
}